#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1

%:
	dh $@ --with systemd

override_dh_systemd_enable:
	dh_systemd_enable --name=revpi-hciuart.target

override_dh_installinit:
	dh_installinit --name=revpi-hciuart.target --no-restart-on-upgrade
	dh_installinit --name=revpi-bthelper@ --no-restart-on-upgrade

override_dh_systemd_start:
	dh_systemd_start --name=revpi-hciuart.target --no-restart-on-upgrade  --no-start
	dh_systemd_start --name=revpi-bthelper@ --no-restart-on-upgrade
